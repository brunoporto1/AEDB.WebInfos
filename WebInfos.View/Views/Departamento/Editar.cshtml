@model WebInfos.Model.TbDepartamento

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar Departamento</h1>

<hr/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdDep" />
            <div class="form-group">
                <label asp-for="Departamento" class="control-label"></label>
                <input asp-for="Departamento" class="form-control" />
                <span asp-validation-for="Departamento" class="text-danger"></span>
            </div>

            <hr/>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success" />
                <a type="button" class="btn btn-primary" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
