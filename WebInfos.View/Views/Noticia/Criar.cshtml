@model WebInfos.Model.TbNoticia

@{
    ViewData["Title"] = "Criar";
}

<h1>Criar Notícia</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Criar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Noticia" class="control-label"></label>
                <input asp-for="Noticia" class="form-control" />
                <span asp-validation-for="Noticia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
